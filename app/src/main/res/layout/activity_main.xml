<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    <com.mzs.market.view.MainTitleView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <FrameLayout
        android:id="@+id/realtabcontent"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <View android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/line_bg"/>
    
    <RadioGroup
        android:id="@+id/tabs_rg"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/tab_rb_a"
            style="@style/tab_btn_style"
            android:checked="true"
            android:drawableTop="@drawable/bottombar_recommend_selector"
            android:text="推荐" />

        <RadioButton
            android:id="@+id/tab_rb_b"
            style="@style/tab_btn_style"
            android:drawableTop="@drawable/bottombar_category_selector"
            android:text="分类" />

        <RadioButton
            android:id="@+id/tab_rb_c"
            style="@style/tab_btn_style"
            android:drawableTop="@drawable/bottombar_rank_selector"
            android:text="排行" />

        <RadioButton
            android:id="@+id/tab_rb_d"
            style="@style/tab_btn_style"
            android:drawableTop="@drawable/bottombar_more_selector"
            android:text="更多" />
    </RadioGroup>

</LinearLayout>