<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.taptwo.android.widget.ViewFlow
        android:id="@+id/relate_apk_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <org.taptwo.android.widget.CircleFlowIndicator
        xmlns:app="http://schemas.android.com/apk/res/com.mzs.market"
        android:id="@+id/choice_banner_indicator"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="5dip"
        android:padding="2dip"
        app:activeColor="@color/text_color_green"
        app:activeType="fill"
        app:circleSeparation="10dip"
        app:inactiveColor="@color/text_color_grey"
        app:inactiveType="fill"
        app:radius="2dip" />

</FrameLayout>